<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cal_result"
        android:layout_width="377dp"
        android:layout_height="220dp"
        android:layout_above="@id/bottom_cal5"
        android:gravity="bottom|right"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="45dp" />


    <LinearLayout
        android:id="@+id/bottom_cal5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_cal4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cal_C"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_sign"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design"
            android:gravity="center"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_percent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design"
            android:gravity="center"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_div"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_orange"
            android:gravity="center"
            android:text="รท"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_cal4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_cal3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cal_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_mul"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_orange"
            android:gravity="center"
            android:text="ร"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_cal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_cal2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cal_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_minus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_orange"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_cal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_cal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cal_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_plus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_orange"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cal_0"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/cal_dot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_design_gray"
            android:gravity="center"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/cal_equal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_design_orange"
            android:gravity="center"
            android:text="="
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>


</RelativeLayout>